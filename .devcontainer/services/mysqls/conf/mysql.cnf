[client]
default-character-set = utf8mb4

[mysqld]
character-set-server = utf8mb4

##======================================
# Logging
##======================================
log_output = FILE

# query log
general-log = 1
general_log_file = /var/log/mysql/query.log

# slow query log
slow_query_log = 1
long_query_time = 2
slow_query_log_file = /var/log/mysql/slow.log
